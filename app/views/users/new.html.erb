<%= provide(:title, 'Distribution Portal') %>
<div id="skype-header" class="row span6 offset3">
<h1>PalmLing Distribution Portal</h1>
<h2>Step 1 - Signup</h2>
<p>Thank you for your interest in PalmLing! Please complete the form below to get started.
</p>
</div>

<div class="row">
  <div class="span6 offset3 temp-skype">
    <%= form_for(@user) do |f| %>
      <%= f.error_messages %> 

      <%= f.label :name %>
      <%= f.text_field :name, :placeholder => "First and Last" %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :phone_number %>
      <%= f.text_field :phone_number %>
			
      <!--%= f.submit "Sign up for Premium", class: "btn btn-large btn-primary" %-->
			
			<div class='hideme'>
			<%= f.text_field :user_type %><%= f.text_field :referred_by %>
			</div>
			
    <% end %>
  </div>
</div>

